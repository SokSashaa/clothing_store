{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "strict" : true,
    "strictFunctionTypes" : true,
    "module": "ESNext",
    "moduleResolution" : "node",
    "target": "ES2017",
    "paths": {
      "*": ["./typings/*"]
    },
    "typeRoots" : ["./node_modules/@types", "./typings"],
    "jsx": "react",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ]
}
